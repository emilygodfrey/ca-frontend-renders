{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/promo/content-type/promo.json",
  "title": "Promo",
  "description": "A single promotion",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "icon": {
      "type": "object",
      "title": "Icon",
      "description": "The icon for the promotion",
      "anyOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
        }
      ]
    },
    "backgroundColor": {
      "type": "string",
      "title": "Background Colour",
      "description": "Background Colour of the promotion",
      "validation": "Add a Hex value",
      "minLength": 3,
      "maxLength": 6
    },
    "topLine": {
      "type": "string",
      "title": "Top Line",
      "description": "Top line of the promotion",
      "validation": "Please enter less than 50 characters",
      "minLength": 0,
      "maxLength": 500
    },
    "toplineColor": {
      "type": "string",
      "title": "Top Line Colour",
      "description": "Top line Colour of the promotion",
      "validation": "Add a Hex value",
      "minLength": 3,
      "maxLength": 6
    },
    "bottomLine": {
      "type": "string",
      "title": "Bottom Line",
      "description": "Bottom Line of the promotion",
      "validation": "Please enter less than 50 characters",
      "minLength": 0,
      "maxLength": 500
    },
    "bottomlineColor": {
      "type": "string",
      "title": "Bottom Line Colour",
      "description": "Bottom line Colour of the promotion",
      "validation": "Add a Hex value",
      "minLength": 3,
      "maxLength": 6
    },
    "link": {
      "type": "object",
      "title": "Link",
      "description": "Links for the promo",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/link/content-type/link.json"
        }
      ]
    }
  },
  "propertyOrder": [
    "icon",
    "backgroundColor",
    "topLine",
    "toplineColor",
    "bottomLine",
    "bottomlineColor",
    "link"
  ]
}