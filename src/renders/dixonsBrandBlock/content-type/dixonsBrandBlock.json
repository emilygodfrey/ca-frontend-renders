{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/dixonsBrandBlock/content-type/dixonsBrandBlock.json",
  "title": "Dixons Brand Block",
  "description": "A reusable content type for a block of Brand Content",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "img": {
      "type": "object",
      "title": "Image",
      "description": "The background image for the banner",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/image/content-type/image.json"
        }
      ]
    },
    "header": {
      "type": "string",
      "title": "Header",
      "description": "Header text for the banner",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "subheader": {
      "type": "string",
      "title": "Subheader",
      "description": "Sub header text for the banner",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "features": {
      "type": "array",
      "title": "Features",
      "description": "Features for this component",
      "items": {
        "type": "string",
        "enum": [
          "wifi",
          "bluetooth",
          "airplay"
        ]
      }
    },
    "new":{
      "title": "New?",
      "description": "Is this product new?",
      "type": "boolean"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "format": "markdown",
      "description": "Description text for the banner",
      "validation": "Please enter less than 2000 characters",
      "minLength": 0,
      "maxLength": 2000
    },
    "button": {
      "type": "object",
      "title": "Link / Button",
      "description": "The action link / button for the banner",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/link/content-type/link.json"
        }
      ],
      "_interpolate": true
    },
    "alignment": {
      "type": "string",
      "title": "Alignment",
      "description": "Alignment of the text content in the banner (left/right). Default is left",
      "enum": [
        "left",
        "right",
        "center"
      ]
    },
    "stackMobileLayout": {
      "type": "boolean",
      "title": "Stack Mobile Layout",
      "description": "Enable to allow banner text to stack underneath the image on small screens. Default is false"
    }
  },
  "propertyOrder": [
    "img",
    "header",
    "subheader",
    "features",
    "new",
    "description",
    "button",
    "alignment",
    "stackMobileLayout"
  ]
}