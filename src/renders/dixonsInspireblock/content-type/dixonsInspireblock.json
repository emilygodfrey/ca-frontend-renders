{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/emilygodfrey/ca-frontend-renders/master/src/renders/dixonsInspireblock/content-type/dixonsInspireblock.json",
  "title": "Dixons Inspire Block",
  "description": "A Dixons Inspire Block",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "title": "Title",
      "description": "The title for this inspire block",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "The Description for this inspire block",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "image": {
      "type": "object",
      "title": "Image",
      "description": "The image for this inspire block",
      "anyOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
        }
      ]
    },
    "link": {
      "type": "object",
      "title": "Link",
      "description": "The link for this Inspire block. Note that the label will not be displayed",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/emilygodfrey/ca-frontend-renders/master/src/renders/link/content-type/link.json"
        }
      ],
      "_interpolate": true
    }
  },
  "propertyOrder": [
    "title",
    "description",
    "image",
    "link"
  ]
}