{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/card/content-type/card.json",
  "title": "Card",
  "description": "A single card of content",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "title": "image",
      "description": "Image used in the card",
      "allOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
        },
        {
          "properties": {
            "contentType": {
              "title": "Image",
              "enum": [
                "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/image/content-type/image.json"
              ]
            }
          }
        }
      ]
    },
    "cardName": {
      "type": "string",
      "title": "Name",
      "description": "Name of the card",
      "validation": "Please enter less than 50 characters",
      "minLength": 0,
      "maxLength": 150
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "Card description",
      "validation": "Please enter less than 50 characters",
      "minLength": 0,
      "maxLength": 200
    },
    "links": {
      "type": "array",
      "title": "Links",
      "description": "Links for the card",
      "items": {
        "$ref": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/link/content-type/link.json"
      },
      "minItems": 0,
      "maxItems": 4
    }
  }
}